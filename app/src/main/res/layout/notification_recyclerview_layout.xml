<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_bottom_border">

    <RelativeLayout
        android:id="@+id/color_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:padding="4dp">

        <RelativeLayout
            android:id="@+id/notifications_profile_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/notification_profile_pic2"
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_29sdp"

                android:visibility="gone" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/notification_profile_pic"
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_29sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"


                />


        </RelativeLayout>


        <TextView
            android:id="@+id/notificatin_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="5dp"
            style="@style/TextAppearance.Body1.Medium"
            android:layout_toEndOf="@id/notifications_profile_relative"

            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:id="@+id/rounded_image_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/notification_liked_post"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"

                android:visibility="gone"

                 />
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>